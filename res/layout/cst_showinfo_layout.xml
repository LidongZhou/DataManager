<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

      	 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" > 
		 		<LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="8" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="船主:" />

                    <EditText
                        android:id="@+id/ship_owner_name_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:singleLine="true"
                        android:enabled="false"/>
		        </LinearLayout>  
		
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="6" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="电话:" />
		
		            <EditText
		                android:id="@+id/ship_owner_phone_info"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:maxLength="20"
		                android:phoneNumber="true"
		                android:singleLine="true"
		                android:enabled="false" />
		        </LinearLayout>
		</LinearLayout>
		  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="船名:  " />

                    <EditText
                        android:id="@+id/ship_name_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:enabled="false"/>
        </LinearLayout>
        
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >  
				<LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		             >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="长:   " />
		
		            <EditText
		                android:id="@+id/ship_length_info"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:maxLength="10"
		                android:numeric="signed|decimal"
		                android:singleLine="true"
		                android:enabled="false" />
		        </LinearLayout>  
		        
				<LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="宽:   " />
		
		            <EditText
		                android:id="@+id/ship_width_info"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:maxLength="10"
		                android:numeric="signed|decimal"
		                android:singleLine="true"
		                android:enabled="false" />
		        </LinearLayout>  
		        
				<LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="高:   " />
		
		            <EditText
		                android:id="@+id/ship_heigth_info"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:maxLength="10"
		                android:numeric="signed|decimal"
		                android:singleLine="true"
		                android:enabled="false" />
		        </LinearLayout>
		</LinearLayout>     
		
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >  
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="载重:  " />
		
		            <EditText
		                android:id="@+id/ship_weight_info"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:maxLength="10"
		                android:numeric="signed|decimal"
		                android:singleLine="true"
		                android:enabled="false" />
		        </LinearLayout>
				  
		          
		
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"  >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="吊水高度:" />
		
		            <EditText
		                android:id="@+id/haul_height_info"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:maxLength="10"
		                android:numeric="signed|decimal"
		                android:singleLine="true"
		                android:enabled="false" />
		        </LinearLayout>
		</LinearLayout>
		
		
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注:" />

             <EditText
                    android:id="@+id/more_info"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:layout_gravity="bottom"
                    android:maxLines="3" 
                    android:enabled="false"/>
       
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="10dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/showinfo_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone_click" />

                <View
                    android:layout_width="100px"
                    android:layout_height="0px" />

                <ImageView
                    android:id="@+id/showinfo_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sms_click" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/showinfo_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#ffffffff"
                    android:background="@drawable/login_btn_click"
                    android:text="修改" />

                <Button
                    android:id="@+id/showinfo_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#ffffffff"
                    android:background="@drawable/login_btn_click"
                    android:text="确定" />

                <Button
                    android:id="@+id/showinfo_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#ffffffff"
                    android:background="@drawable/login_btn_click"
                    android:text="取消" />
            </LinearLayout>
        </LinearLayout>
 

</LinearLayout>