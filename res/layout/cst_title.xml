<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout 
            android:background="@drawable/cst_actionbar_background"
            android:layout_width="match_parent" 
    		android:layout_height="wrap_content" 
            >
            <LinearLayout 
                android:id="@+id/showallinfo"
                android:orientation="horizontal"
                android:layout_width="wrap_content" 
    			android:layout_height="wrap_content" 
    			android:layout_alignParentLeft="true"
    			android:padding="10dip"
    			android:gravity="center"
    			android:background="@drawable/press_background"
                >
                <ImageView 
                    android:layout_width="30dp" 
    				android:layout_height="30dp" 
    				android:src="@drawable/actionbar_icon"
                    />
                <TextView
                    android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="@string/title_name"
    				android:layout_marginLeft="10dip"
    				android:textSize="18dp"
    				android:textColor="@color/lightgray"
                    />
            </LinearLayout>
            <LinearLayout 
                android:orientation="horizontal"
                android:layout_width="wrap_content" 
    			android:layout_height="wrap_content" 
    			android:layout_alignParentRight="true"
    			android:gravity="center"
                >

                <ImageView 
                    android:id="@+id/search"
                    android:layout_marginRight="5dip"
                    android:layout_width="50dp" 
    				android:layout_height="50dp" 
    				android:background="@drawable/press_background"
    				android:src="@drawable/actionbar_search_icon"
                    />
                 <ImageView 
                    android:layout_width="50dp" 
    				android:layout_height="50dp" 
    				android:id="@+id/add"
    				android:layout_marginRight="5dip"
    				android:background="@drawable/press_background"
    				android:src="@drawable/actionbar_add_icon"
                    />
                  <ImageView 
                    android:id="@+id/refresh"
                    android:layout_marginRight="5dip"
                    android:layout_width="50dp" 
    				android:layout_height="50dp" 
    				android:background="@drawable/press_background"
    				android:src="@drawable/actionbar_refresh_icon"
                    />
                  <ImageView 
                    android:layout_width="50dp" 
    				android:layout_height="50dp" 
    				android:id="@+id/set"
    				android:background="@drawable/press_background"
    				android:src="@drawable/actionbar_more_icon"
                    />
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>